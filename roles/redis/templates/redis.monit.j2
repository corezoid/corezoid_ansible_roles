{% if redis_install_counter %}
check process {{ redis_counter_name }} with pidfile /var/run/redis/{{ redis_counter_name }}.pid
   group redis
   start program = "/sbin/service {{ redis_counter_name }} start" with timeout 15 seconds
   stop  program = "/sbin/service {{ redis_counter_name }} stop"
   if 15 restarts within 15 cycles then timeout
{% endif %}

