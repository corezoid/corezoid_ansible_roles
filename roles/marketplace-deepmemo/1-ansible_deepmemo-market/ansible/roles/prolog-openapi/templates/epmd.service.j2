[Unit]
Description=Erlang EPMD Daemon
Wants=network.target
After=network.target

[Service]
Type=forking
WorkingDirectory=/ebsmnt/erlang/prolog-openapi/bin
Environment=HOME=/ebsmnt/erlang/prolog-openapi
ExecStartPre=/bin/sleep 10
ExecStart=/ebsmnt/erlang/prolog-openapi/erts-9.2/bin/epmd -address 127.0.0.1 -daemon
Restart=always
User=app-user

[Install]
WantedBy=multi-user.target
